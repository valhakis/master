<!DOCTYPE html>
<html lang="en">
  <head>
    {{#block "head"}}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ app.name }}</title>

    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/stack/style.css">
    {{/block}}
  </head>
  <body>

    {{> navigation}}

    <div class="messages">
      {{#each successes}}
      <p class="success">{{ this }}</p>
      {{/each}}

      {{#each errors}}
      <p class="error">{{ this }}</p>
      {{/each}}
    </div>

    {{#block "body"}}{{/block}}

    {{> footer}}
  </body>
</html>
