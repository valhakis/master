{{#extend "base"}}

{{#content "body"}}

<h1>Stacks Index</h1>

<a href="/stack/stacks/create">Create a stack.</a>

<br> <br>

<a href="/stack/stacks/create/table">Create stacks table.</a>

<br> <br>

<a href="/stack/stacks/drop/table">Drop stacks table.</a>

<br> <br>

{{#unless stacks.length}}
<p class="info">No stack records in database.</p>
{{/unless}}

{{#each stacks}}
<div class="stack">
  <small>ID: {{ this.id }}</small>
  <h3 class="title"><a href="/stack/stacks/{{ this.id }}">{{ this.name }}</a></h3>
  <div class="description">{{ this.description }}</div>
  <small>Created At {{ this.createdAt }}</small>
</div>
{{/each}}

{{/content}}

{{/extend}}
