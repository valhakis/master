   h4 Form Validation.
   pre
      code.code.pug.
         form(name="form1")
            label Email.
            input(type="email", name="email", ng-model="email")

         p {{ form1.email.$valid }}
         p {{ form1.email.$dirty }}
         p {{ form1.email.$touched }}
   span.app-break
   pre
      code.code.css.
         input.ng-invalid {
            background-color: red;
         }
         input.ng-valid {
            background-color: red;
         }
         input.ng-pristine {
            background-color: red;
         }
         input.ng-pending {
            background-color: red;
         }
         input.ng-dirty {
            background-color: red;
         }
         input.ng-empty {
            background-color: red;
         }
         input.ng-not-empty {
            background-color: red;
         }
         input.ng-touched {
            background-color: red;
         }
         input.ng-untouched {
            background-color: red;
         }
