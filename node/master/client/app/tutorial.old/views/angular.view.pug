div.w3-container.w3-light-gray
   h4 Data Binding.
   pre
      code.code.javascript.
         var app = angular.module('app', []);

         app.run(function($rootScope) {
            $rootScope.color = 'red';
         });

         app.controller('MyController', function($scope) {
            $scope.color = 'red';

            $scope.name = 'William Valhakis';

            $scope.persons = [{
               id: 1,
               name: "Person Name"
            },{
               id: 2,
               name: "Person Name"
            },{
               id: 3,
               name: "Person Name"
            }];

            $scope.click = function() {
               console.log('clicked');
            };
         });
   span.app-break
   pre
      code.code.pug.
         button(ng-click="click()")

         ul
            li(ng-repeat="person in persons")
               span(ng-bind="person.name")
   br

