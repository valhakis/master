h5 CODE LIST PAGE

div.list
  div(ng-repeat="code in vm.codes | filter:{removedAt: null}")
     h6 {{ code.title }}
     app-code(bind="code.body", language="code.language")
     div.buttons(style="margin-top: 10px;")
        button(ng-click="vm.runCode(code)") RUN CODE
        button(onclick="this.nextSibling.classList.toggle('hide')") VIEW CODE OBJECT
        app-code.hide(object="code", language="json")
        button(ui-sref="tutorial.single.code.edit({codeId: code._id})") EDIT
        button(ng-click="vm.removeCode(code)") REMOVE CODE


