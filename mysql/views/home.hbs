{{#extend "base"}}

{{#content "head"}}
<link rel="stylesheet" href="/prismjs/themes/prism-twilight.css">
{{/content}}

{{#content "body"}}

<h1>Home</h1>
<p>Lorem eligendi ea natus deserunt quaerat id dolores? Aut ullam distinctio tempore assumenda assumenda. Sint ad necessitatibus natus cum accusantium. Esse molestias rem dignissimos sit odio? Accusamus labore ex magnam.</p>

<h3>Latest {{codes.length}} codes.</h3>
{{#if codes}}
{{#each codes}}
<div class="code">
  {{#if this.title}}
  <h4 style="margin-top: 0px;"><a href="/mysql/codes/{{ this.id }}">{{ this.title }}</a></h4>
  {{else}}
  <h4 style="margin-top: 0px;"><a href="/mysql/codes/{{ this.id }}">CODE HAS NO TITLE</a></h4>
  {{/if}}

  {{#if this.description}}
  <p>{{ this.description }}</p>
  {{else}}
  <p>CODE HAS NO DESCRIPTION</p>
  {{/if}}

  {{#if this.body}}
  <pre><code class="language-{{ this.language }}">{{ this.body }}</code></pre>
  {{else}}
  <pre><code style="color: #FF6666">CODE HAS NO BODY</code></pre>
  {{/if}}
</div>
{{/each}}
{{/if}}

{{/content}}

{{#content "scripts"}}
<script src="/prismjs/prism.js"></script>
<script src="/prismjs/components/prism-c.js"></script>
<script src="/prismjs/components/prism-cpp.js"></script>
<script src="/prismjs/components/prism-sql.js"></script>
{{/content}}

{{/extend}}
