<h1>PROFILE</h1>

<pre><code>{{ JSON user }}</code></pre>

<a class="w3-btn w3-red" href="{{ url '/logout' }}">LOG OUT</a>

<br> <br>

<div>
  <div class="w3-container w3-yellow">
    <h2>Set password: </h2>
  </div>
  <form class="w3-container w3-pale-yellow" action="{{ url '/users/setPassword' }}" method="POST">
    <div>
      <label>Password: </label>
      <input type="password" name="password" placeholder="Place your password here.">
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>

<div>
  <div class="w3-container w3-yellow">
    <h2>Set name</h2>
  </div>
  <form class="w3-container w3-pale-yellow" action="{{ url '/users/setName' }}" method="POST">
    <div>
      <label>Name: </label>
      <input type="text" name="name" placeholder="Place your name here.">
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>
