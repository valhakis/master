    <a class="w3-button w3-blue w3-hover-pink" href="{{ url '/login' }}">LOG IN</a>
  </p>
</div>
{{/if}}

<div>
  <div class="w3-container w3-yellow">
    <h2>LATEST {{ posts.length }} POSTS</h2>
  </div>
  {{#each posts}}
  <div class="w3-panel w3-card w3-pale-yellow">
    <h3>{{ this.title }}</h3>
    <div>{{ this.body }}</div>
    <p>Author: <a class="w3-text-blue" href="{{ url (concat '/users/' this.author._id) }}">{{ this.author.name }}</a></p>
  </div>
  {{/each}}
</div>
