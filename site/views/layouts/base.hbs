<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Site</title>
    <link rel="stylesheet" href="/lib/w3.css">
    <link rel="stylesheet" href="/main.dist.css">
    <link rel="stylesheet" href="/site/style.css">
  </head>
  <body>
    {{> nav}}

    <div class="flashMessages">
      {{#each messages.flashMessages}}
      {{#equals this.type "error"}}
      <p class="error">{{ this.message }}</p>
      {{else}}
      <p class="success">{{ this.message }}</p>
      {{/equals}}
      {{/each}}

      {{#each messages.error}}
      <p class="error">{{ this }}</p>
      {{/each}}
    </div>

    <div class="w3-container">
      {{{body}}}
    </div>

    {{> footer}}
  </body>
</html>
