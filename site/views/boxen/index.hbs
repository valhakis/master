<h1>BOXEN INDEX</h1>

<button onclick="modal.show('#create-box-modal');" class="w3-btn w3-pink">Create a Boxen.</button>

<!-- list of boxen -->
<h2>LIST OF BOXEN</h2>

{{#each boxen as |box|}}
  <div class="w3-panel w3-purple">
    <h3><a href="{{ url (concat '/boxen/' box._id) }}">{{ box.title }}</a></h3>
    <p>Author: {{ box.author.name }}</p>
  </div>
{{/each}}

<div id="create-box-modal" class="w3-modal">
  <div class="w3-modal-content w3-pale-red">
    <div class="w3-container w3-pink">
      <span class="w3-button w3-display-topright w3-purple" onclick="modal.hide('#create-box-modal');">&times;</span>
      <h1>THE CREATE BOX MODAL</h1>
      <form class="v1-form" action="{{ url '/boxen/store' }}" method="POST">
        <div>
          <label>Title: </label>
          <input type="text" name="title">
        </div>
        <div>
          <button class="w3-btn w3-purple">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  var modal = {
    show: function(id) {
      var modal = document.body.querySelector(id);
      modal.style.display = 'block';
    },
    hide: function(id) {
      var modal = document.body.querySelector(id);
      modal.style.display = 'none';
    }
  };
</script>
