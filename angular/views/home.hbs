<div class="example" ng-controller="brilliant">
  <h3>Angular Static Example 06</h3>

  First Name: <input type="text" ng-model="fname">
  Last Name: <input type="text" ng-model="lname">

  <p>Full Name: <% fname + " " + lname %></p>

  <p><small>Using a controller.</small></p>
</div>

<div class="example" ng-init="hex='#FF3333'">
  <h3>Angular Static Example 07</h3>

  <div style="background-color: <% hex %>; padding: 10px; min-height: 80px; margin-bottom: 10px; text-align: center; vertial-align: middle; line-height: 50px; border: 1px solid rgba(0, 0, 0, 0.3)">
    <p><% hex %></p>
  </div>

  Hex: <input type="text" ng-model="hex" value="<% hex %>">

  <p><small>Dynamic color.</small></p>
</div>

<div class="example" ng-init="money=322;products=[{name: 'Tomato', price: 15, quantity: 9}, {name: 'Potato', price: 8, quantity: 12}]">
  <h3>Angular Static Example 08</h3>
  <p><b>Money: </b> <% money %>$</p>

  <div ng-repeat="product in products" style="color: #333333;background-color: #66FF66; padding: 10px 5px; margin-bottom: 5px; border: 1px solid rgba(0, 0, 0, 0.3)">
    <p style="margin: 0px 0px 10px 0px;">Name: <% product.name %></p>
    <p style="margin: 0px 0px 10px 0px;">Quantity: <% product.quantity %></p>
    <p style="margin: 0px 0px 10px 0px;">Price: <% product.price %>$</p>
    <p style="margin: 0px 0px 10px 0px;">Total cost: <% product.price * product.quantity %>$</p>
  </div>

  <p><small>Object creation and displayation.</small></p>
</div>

